<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:semantic="sap.m.semantic" controllerName="OpenTickets.controller.Master">
	<semantic:MasterPage id="page" title="{masterView>/title}" navButtonPress="onNavBack" showNavButton="true">
		<semantic:subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{= !${device>/support/touch} }" tooltip="{i18n>masterSearchTooltip}" width="100%" search="onSearch"/>
				</contentMiddle>
			</Bar>
		</semantic:subHeader>
		<semantic:content>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<List id="list" items="{ path: '/TICKETOPENSet', sorter: { path: 'Description', descending: false }, groupHeaderFactory: '.createGroupHeader' }" busyIndicatorDelay="{masterView>/delay}" noDataText="{masterView>/noDataText}" mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" selectionChange="onSelectionChange" headerText="Open Tickets">
				<!--
				<infoToolbar>
					<Toolbar active="true" id="filterBar" press="">
						<Title id="filterBarLabel" text="FilterBar Placeholder"/>
					<content>
					</content>
					</Toolbar>
				</infoToolbar>
				-->
				<items>
					<ObjectListItem press="onSelectionChange" title="{Description}" intro="{OwnerNameText}" type="Navigation">
						<firstStatus>
							<ObjectStatus state="Success" text="{StatusTxt}"/>
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
		<semantic:sort><semantic:SortAction tooltip="Sort by ticket description" id="sortButton" press="onSort"/>
		</semantic:sort>
		<!--
		<semantic:addAction>
		<semantic:AddAction id="addButton" enabled="{appView>/addEnabled}" press="onAdd" tooltip="Create new ticket"/>
		</semantic:addAction>
		-->
	</semantic:MasterPage>
</mvc:View>